<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv_farmaco"
    android:background="@color/white"
    android:orientation="horizontal"
    android:layout_margin="15dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="100dp"
    android:backgroundTint="@color/white"
    app:cardCornerRadius="20dp">

        <LinearLayout
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_farmaco"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:elevation="100dp"
                android:src="@drawable/ic_farmaco"

             />

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:columnCount="2"
                android:rowCount="3">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_row="0"
                    android:layout_column="0"/>

                <TextView
                    android:id="@+id/tv_nombre_farmaco"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:text="Morfina"
                    android:layout_row="1"
                    android:layout_column="0"
                    android:layout_gravity="center_vertical"
                    android:textSize="45sp" />

                <GridLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="2"
                    android:layout_gravity="right"
                    android:layout_column="0"
                    android:columnCount="2">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_row="0"
                        android:layout_column="0"
                        android:text="Dosis máxima:"
                        android:textAlignment="textEnd"
                        android:textColor="@color/rojo"
                        android:textSize="30sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_dosis_maxima"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_row="0"
                        android:layout_column="1"
                        android:text="12 ug/día"
                        android:textAlignment="textEnd"
                        android:textColor="@color/rojo"
                        android:textSize="30sp"
                        android:textStyle="bold" />
                </GridLayout>
            </GridLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

