<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".InicioActivity"
        android:gravity="center">

        <TextView
            android:id="@+id/bienvenida_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="20dp"
            android:text="@string/bienvenida"
            android:textAlignment="center"
            android:textSize="50sp"
            android:textStyle="bold" />


        <ImageView
            android:id="@+id/inicio_img"
            android:layout_width="499dp"
            android:layout_height="494dp"
            android:layout_below="@+id/bienvenida_txt"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:src="@drawable/logo" />

        <Button
            android:id="@+id/login_btn"
            android:layout_width="350dp"
            android:layout_height="70dp"
            android:layout_below="@id/inicio_img"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="5dp"
            android:backgroundTint="@color/teal_200"
            android:text="Iniciar sesiÃ³n"
            android:textSize="22sp"
            app:cornerRadius="30dp" />

        <Button
            android:id="@+id/signin_btn"
            android:layout_width="350dp"
            android:layout_height="70dp"
            android:layout_below="@id/login_btn"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="100dp"
            android:layout_marginBottom="16dp"
            android:backgroundTint="@color/teal_200"
            android:text="Registrarse"
            android:textSize="22sp"
            app:cornerRadius="30dp" />


        <TextView
            android:id="@+id/o"
            android:layout_width="29dp"
            android:layout_height="26dp"
            android:layout_below="@id/login_btn"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="20dp"
            android:text="O"
            android:textAlignment="center"
            android:textColor="@color/purple_700"
            android:textSize="16sp" />

        <View
            android:id="@+id/or_line1"
            android:layout_width="250dp"
            android:layout_height="2dp"
            android:layout_below="@id/login_btn"
            android:layout_marginStart="24dp"
            android:layout_marginTop="50dp"
            android:layout_marginRight="6dp"
            android:layout_marginBottom="21dp"
            android:layout_toLeftOf="@id/o"
            android:background="@color/purple_700" />

        <View
            android:id="@+id/or_line2"
            android:layout_width="250dp"
            android:layout_height="2dp"
            android:layout_below="@id/login_btn"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="21dp"
            android:layout_toRightOf="@id/o"
            android:background="@color/purple_700" />
    </RelativeLayout>
</LinearLayout>